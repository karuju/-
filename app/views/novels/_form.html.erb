
<div class="searching_novel">
<%= form_with(model: Novel.new, data: { turbo: false }) do |form| %>
  <div class="mb-3">
  <%= form.label :"作品タイトル", class: "form-label" %> 
  <%= form.text_field :title, class: "form-control" %>
</div>
<div class="mb-3">
  <%= form.label :"著者", class: "form-label" %> 
  <%= form.text_field :author, class: "form-control" %>
</div>

<div class="mb-3">
  <%= form.label :"ジャンル", class: "form-label" %> 
  <%= form.select :category, Novel.categories.keys.map { |c| [c, c] }, {}, class: "form-control" %>
</div>
<%= form.submit "保存", class: "btn btn-primary", data: { disable_with: '取得' }%>
<% end %>
</div>
