<h1>Song#show</h1>
<p>Find me in app/views/song/show.html.erb</p>
<div class="container">
  <div class="to_track_page">
  <% if @song.uri.include?('spotify:track') %> 
    <%= link_to @song.uri.gsub('spotify:track:', 'https://open.spotify.com/track/'), target: :_blank, rel: "noopener noreferrer" do %>
      <i class="fa-brands fa-spotify"></i><%= @song.name %>
    <% end %>
  <% elsif @song.uri.include?('http') %>
    <%= link_to @song.uri, target: :_blank, rel: "noopener noreferrer" do %>
      <i class="fa-solid fa-globe"></i><%= @song.name %>
    <% end%>
  <% else %>
    <%= link_to "https://www.youtube.com/watch?v=#{@song.uri}", target: :_blank, rel: "noopener noreferrer" do %>
      <i class="fa-brands fa-youtube"></i><%= @song.name %>
    <% end %>
  <%end%>
  <%= @song.artist.name %>
  <% if @song.image.present? %>
  <%= image_tag @song.image %>
  <% end %>

  <%= @song.release_date %>


  <div class="link_button">
    <%= link_to "一覧", songs_path %>
  </div>
  <div class="link_button">
    <%= link_to "編集", edit_song_path(@song) %>
  </div>
  <div class="link_button">
  <%= link_to song_path(@song), data: { turbo_method: :delete, turbo_confirm: t('削除しますか？') } do %>
    削除
  <% end %>
  </div>

</div>