<div id="<%= dom_id answer %>">
  <%= image_tag(answer.user.image.present? ? answer.user.image_url : 'user_default.jpg') %>
  <%= answer.user.name %>
  <div class="content-info">
    <div class="content-title">
      <strong>Content-Title:</strong>
      <%= answer.content.contentable.title %>
      <strong>Author:</strong>
      <% if answer.content.contentable.author %>
        <%= answer.content.contentable.author %>
      <% end %>
    </div>
    <div class="content-explain">
      <%= answer.body %>
    </div>
  </div>
  <div class="like-button">
    <% if current_user %>
      <% @likeable = answer %>
      <%= render 'likes/like_button' %>
    <% end %>
  </div>
</div>
