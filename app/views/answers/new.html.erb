<h1>New answer</h1>

<div class="content-radiobutton">
  <input type="radio" id="comic-radio" name="content-type" value="comic">Comic<br>
  <input type="radio" id="novel-radio" name="content-type" value="novel">Novel<br>
  <input type="radio" id="movie-radio" name="content-type" value="movie">Movie<br>
</div>

<div class="content-form">
  <div id="comic-form" style="display: none;">
  <%= render "comics/form", comic: @comic %>
  </div>

  <div id="novel-form" style="display: none;">
    <%= render "novels/form", comic: @novel %>
  </div>

  <div id="movie-form" style="display: none;">
    <%= render "movies/form", movie: @movie %>
  </div>
</div>

<br>

<div>
  <%= link_to "Back to answers", answers_path %>
</div>
