
  <div class="searching_comic">
    <%= form_with(model: Comic.new, data: { turbo: false }) do |form| %>
      <div class="mb-3">
      <%= form.label :title, class: "form-label" %> 
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :author, class: "form-label" %> 
      <%= form.text_field :author, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :category, class: "form-label" %> 
      <%= form.select :category, Comic.categories.keys.map { |c| [I18n.t("activerecord.enum.comic.category.#{c}"), c] }, {}, class: "form-control" %>
    </div>
      <%= form.submit I18n.t('helpers.submit.save'), class: "btn btn-primary", data: { disable_with: I18n.t('helpers.submit.get') }%>
    <% end %>
  </div>
