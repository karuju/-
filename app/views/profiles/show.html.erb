<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to '編集', edit_profile_path, class: 'btn btn-secondary float-right' %>
      <table class="table">
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row">ユーザー名 </th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row">画像</th>
          <td><%= image_tag current_user.image.url, class: 'rounded-circle', size: '50x50' %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
