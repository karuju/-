<div id="<%= dom_id post %>">

  <div class="user">

  <div class="content-title">
    <strong>Title:</strong>
    <%= post.title %>
  </div>
  <strong>作成者</strong>
  <%= post.user.name %>
  </div>
  <div class="song-info">
    <%= render 'songs/song_info', item: post %>
  </div>

  <div class="content-info">
    <div class="content-title">
      <strong>Content-Title:</strong>
      <%= post.content.contentable.title %>
      <% if post.content.contentable.respond_to?(:author) %>
      <strong>Author:</strong>
      <%= post.content.contentable.author %>
      <% elsif post.content.contentable.respond_to?(:director) %>
      <strong>Director:</strong>
      <%= post.content.contentable.director %>
      <% end %>
    </div>

  
    <div class="content-explain">
        <strong>Body:</strong>
        <%= post.body %>
    </div>
  </div>

  <div class="like_button">
    <% if current_user %>
      <% @likeable = post %>
      <%= render 'likes/like_button' %>
    <% end %>
  </div>
</div>
