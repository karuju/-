<div class="container-fluid text-center">
  <div class="main">
    <div class="search-field">
      <%= render 'shared/search', url: posts_path, frame_id: 'posts' %>
    </div>
    <br>
    <h1><%= t('.title') %></h1>
    <div class="to-create">
      <h3><%= link_to "投稿する", create_post_path %></h3>
    </div>
    <div class="index posts" >
    <%= turbo_frame_tag 'posts' do %>
      <div id="posts" class="row">
        <% @posts.each do |post| %>
          <div class="post col-md-4 col-sm-6 col-xs-12">
            <div class="card">
              <%= render 'post_index', post: post %>
              <p>
                <%= link_to "この投稿を開く", post, class: "btn btn-secondary", data: { turbo: false } %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
    <div class="pager">
    <%=  paginate @posts, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>