<div class="col-lg-10 offset-lg-1">
  <p style="color: green"><%= notice %></p>

  <div class="search-field">
    <%= render 'admin/answers/answer_search', url: admin_answers_path, frame_id: 'answers' %>
  </div>

  <h1>Boards</h1>
  <div class="pager">
    <%=  paginate @answers, theme: 'twitter-bootstrap-4' %>
  </div>
 
  <%= turbo_frame_tag 'answers' do %>
    <div id="answers" class="row">
      <% @answers.each do |answer| %>
        <div class="post col-md-4 border">
          <%= render answer %>
          <p>
            <%= link_to "Show this answer", admin_answer_path(answer), data: { turbo: false } %>
          </p>
        </div >
      <% end %>
    </div>
  <% end %>
  

  <div class="pager">
  <%=  paginate @answers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>