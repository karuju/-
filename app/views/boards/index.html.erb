<div class="container-fluid text-center">
  <div class="main">
  <div class="search-field">
    <%= render 'shared/search', url: boards_path, frame_id: 'boards' %>
  </div>

  <div class="to-create">
    <h3><%= link_to "募集する", new_song_path(creation_type: 'board') %></h3>
  </div>
  <div class="index boards" >
  <%= turbo_frame_tag 'boards' do %>
    <div id="boards" class="row">
      <% @boards.each do |board| %>
        <%= link_to board, data: { turbo: false }, class: "item col-md-4 col-sm-6 col-xs-12" do %>
          <div class="card">
            <%= render 'board_index', board: board %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
  </div>
  <div class="pager">
  <%=  paginate @boards, theme: 'twitter-bootstrap-4' %>
  </div>
  </div>
</div>